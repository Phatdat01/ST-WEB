@model IEnumerable<Book.Models.ThongKe2_Result>
@{
    ViewBag.Title = "Chart";
    Layout = "~/Views/Shared/ViewAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <title>Thống kê</title>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/chart.css" rel="stylesheet">
    <link href="~/Content/my1.css" rel="stylesheet">
</head>

<body>
    @foreach (var item in Model)
    {
        <div style="display:none" class="chart-money">
            <input class="total-money" type="text" value=" @Html.DisplayFor(modelItem => item.TenSach)" />
            <input class="date-money" type="text" value=" @Html.DisplayFor(modelItem => item.SoLuong)" />

        </div>

    }
    <section id="main-content">
        <section class="wrapper site-min-height">
            @{ if (ViewBag.Quantity == null)
                {
                    <h3 style="color: red;text-align:center">Chưa bán được sản phẩm</h3>
                    <div style="font-size:100px; color: blue;text-align: center"><i class="fa fa-frown-o"></i><i class="fa fa-frown-o"></i><i class="fa fa-frown-o"></i> </div>
                 }
                else
                {
                    <div>
                        <a href="/DonHangs/Chart" class="btn btn-theme04"><i class="fa fa-list-alt"></i>  Thống kê doanh thu</a>
                    </div>
                    <h3><i class="fa fa-angle-right"></i> Số lượng sách bán trong ngày</h3>
                    <div id="morris">
                        <div class="row mt">

                            <div class="col-lg-10 col-mg">
                                <div class="content-panel">

                                    <div style="font-size: 16px" class="panel-body">
                                        <div id="hero-bar" class="graph"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            }

        </section>
    </section>


    <script src="~/Content/js/jquery.js"></script>
    <script class="include" type="text/javascript" src="~/Content/js/jqaccordion.js"></script>
    <script src="~/Content/js/nicescroll.js" type="text/javascript"></script>
    <script src="~/Content/js/raphael.js"></script>
    <script src="~/Content/js/morris.min.js"></script>
    <script >

        var charMoneyArr = document.querySelectorAll('.chart-money');

        var kq = Array.from(charMoneyArr).reduce(function (callback, input) {

            var obj = {};
            var inputMoney = input.querySelector('.total-money').value.trim();
            var inputDate = input.querySelector('.date-money').value.trim();
         
            obj.geekbench = parseInt(inputDate);
            obj.device = inputMoney;

            callback.push(obj)

            return callback;

        }, [])

      
        var Script = function () {

    //morris chart

    $(function () {
       

        Morris.Bar({
            element: 'hero-bar',
            data: kq,
            xkey: 'device',
            ykeys: ['geekbench'],
            labels: ['Số lượng'],
            barRatio: 0.4,
            xLabelAngle: 35,
            hideHover: 'auto',
            barColors: ['#ac92ec']
        });

      

        $('.code-example').each(function (index, el) {
            eval($(el).text());
        });
    });

}();
    </script>

</body>

</html>