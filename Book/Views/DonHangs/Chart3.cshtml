@model IEnumerable<Book.Models.trongnam_Result>
@{
    ViewBag.Title = "Chart3";
    Layout = "~/Views/Shared/ViewAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <title>Thống kê</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/chart.css" rel="stylesheet">
    <link href="~/Content/my1.css" rel="stylesheet">
    <style>
        .form-change__nam{
            border: 2px solid #999;
            display: block;
          
            width: 600px;
            padding: 20px;
            margin: 10px 30px;
        }
        .form-div{
            display: inline-block;
            margin: 0 10px;
        }
        .current-year {
            width: 200px;
            height: 40px;
            margin-left: 50px;
            padding: 5px 10px;
            outline: none;
            border-radius: 5px;
        }

        .current-year__label {
            text-align: center;
            font-size: 20px;
            color: #000;
            margin-left: 50px;
        }
        .btn.btn-theme{
            float: right;
        }
    </style>
</head>

<body>
    @foreach (var item in Model)
    {
        <div style="display:none" class="chart-money">
            <input class="total-money" type="text" value=" @Html.DisplayFor(modelItem => item.tong)" />
            <input class="date-money" type="text" value=" @Html.DisplayFor(modelItem => item.thang)" />

        </div>

    }

    <form action="/DonHangs/Chart3" class="form-change__nam"  method="get">
        <div  class="form-div">
            <label class="current-year__label">Chọn năm: </label>
            <select class="current-year btn-danger" name="year">
                @{
                    foreach (var item in ViewBag.time)
                    {

                        <option value="@item"> @item</option>
                    }

                }

            </select>
        </div>

        <input type="submit" class="btn btn-success" value="Thống kê" />
    </form>
    <section id="container">
        <section id="main-content">
            <section class="wrapper site-min-height">
                <h3><i class="fa fa-angle-right"></i>Thống kê trong năm @ViewBag.year</h3>
                <div id="morris">
                    <div class="row mt">
                        <div class="col-lg-10">
                            <div class="content-panel">
                                <div style="font-size: 16px;font-weight:600" class="panel-body">
                                    <div id="hero-graph" class="graph"></div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <!-- page end-->
            </section>
        </section>

    </section>



    <script src="~/Content/js/jquery.js"></script>
    <script class="include" type="text/javascript" src="~/Content/js/jqaccordion.js"></script>
    <script src="~/Content/js/nicescroll.js" type="text/javascript"></script>
    <script src="~/Content/js/raphael.js"></script>
    <script src="~/Content/js/morris.min.js"></script>
    <script>
        

        var charMoneyArr = document.querySelectorAll('.chart-money');
        var kq = Array.from(charMoneyArr).reduce(function (callback, input) {

            var obj = {};
            var inputMoney = input.querySelector('.total-money').value.trim();
            var inputDate = input.querySelector('.date-money').value.trim();
            var inputYear = document.querySelector('.current-year').value.trim();

            obj.period = inputYear + "-" + inputDate;
            obj.licensed = parseInt(inputMoney)/1000;

            callback.push(obj)

            return callback;

        }, [])

        console.log(kq)
        var Script = function () {

            //morris chart

            $(function () {

                Morris.Line({
                    element: 'hero-graph',
                    data: kq,
                    xkey: 'period',
                    ykeys: ['licensed'],
                    labels: ['Tổng tiền ( Triệu đồng)', 'Off the road'],
                    lineColors: ['#ed5565']
                });



                $('.code-example').each(function (index, el) {
                    eval($(el).text());
                });
            });

        }();
    </script>

</body>

</html>