@model Book.Models.DonHang

@{
    ViewBag.Title = "Create order";
    Layout = "~/Views/Shared/ViewAdmin.cshtml";
}


<div id="addManagerModal" class="modal-fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/DonHangs/Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h4 class="modal-title">Thêm Đơn Hàng</h4>
                    <div style="float:right; text-decoration: none">

                        @Html.ActionLink("Back to List", "Index")
                    </div>

                </div>
                <div class="modal-body">
                    <div style="display:none" class="form-group">
                        <label>Mã đơn hàng</label>
                        <input type="text" required class="form-control" name="MaDH" value="@Html.DisplayFor(model => model.MaDH)">
                    </div>
                    <div class="form-group">
                        <label>Mã khách hàng</label>
                        <input type="text" readonly class="form-control" name="MaKH" value="@Session["ID"]">
                    </div>

                    <div class="form-group">
                        <label>Ngày đặt</label>
                        <input type="date" required class="form-control" name="NgayDat" value="@Html.DisplayFor(model => model.NgayDat)">
                    </div>
                    <div class="form-group">
                        <label>Ngày nhận</label>
                        <input type="date" required class="form-control" name="NgayNhan" value="@Html.DisplayFor(model => model.NgayNhan)">
                    </div>
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <input type="text" required class="form-control" name="TongTien" value="@Html.DisplayFor(model => model.TongTien)">
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="reset" class="btn btn-default" data-dismiss="modal" value="Reset">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>
