@model Book.Models.NhaXuatBan


    @{
        ViewBag.Title = "Create";
        Layout = "~/Views/Shared/ViewAdmin.cshtml";
    }

<div id="addManagerModal" class="modal-fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/NhaXuatBans/Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h4 class="modal-title">Thêm Nhà Xuất Bản</h4>
                    <div style="float:right; text-decoration: none">

                        @Html.ActionLink("Back to List", "Index")
                    </div>

                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Mã nhà xuất bản</label>
                        <input type="text" required class="form-control" name="MaNXB" value="">
                    </div>
                    <div class="form-group">
                        <label>Tên nhà xuất bản</label>
                        <input type="text" class="form-control" name="TenNXB" value="">
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="reset" class="btn btn-default" data-dismiss="modal" value="Reset">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>