@model Book.Models.NhaXuatBan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ViewAdmin.cshtml";
}


<div id="editEmployeeModal" class="modal-fade">
    @*appear when add class: sk-chase-background__appear*@
    <div class="around-loading">
        <div align="center" class="fond">
            <div class="contener_general">
                <div class="contener_mixte">
                    <div class="ballcolor ball_1">&nbsp;</div>
                </div>
                <div class="contener_mixte">
                    <div class="ballcolor ball_2">&nbsp;</div>
                </div>
                <div class="contener_mixte">
                    <div class="ballcolor ball_3">&nbsp;</div>
                </div>
                <div class="contener_mixte">
                    <div class="ballcolor ball_4">&nbsp;</div>
                </div>
            </div>
        </div>


    </div>
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/NhaXuatBans/Edit" method="post" class="form-edit__book">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h4 class="modal-title">Chỉnh sửa thông tin nhà xuất bản</h4>
                    <div style="float:right; text-decoration: none">

                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Mã nhà xuất bản : @Html.DisplayFor(model => model.MaNXB)</label>
                        <input style="display:none" type="text" name="MaNXB" class="form-control"
                               value="@Html.DisplayFor(model => model.MaNXB)">
                    </div>
                    <div class="form-group">
                        <label>Tên nhà xuất bản</label>
                        <input type="text" required class="form-control" name="TenNXB"
                               value="@Html.DisplayFor(model => model.TenNXB)">
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <input type="reset" class="btn btn-default btn-default__reset" data-dismiss="modal" value="Reset">
                    <input type="submit" class="btn btn-info btn-info__save" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    var btnReset = document.querySelector('.btn-default__reset');
    var formEdit = document.querySelector('.form-edit__book');
    var spinner = document.querySelector('.around-loading');
    formEdit.onsubmit = (e) => {
        event.preventDefault();
        spinner.classList.add('sk-chase-background__appear')
        setTimeout(() => {
            formEdit.submit();
        }, 5000)
    }



</script>
