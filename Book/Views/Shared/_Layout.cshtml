<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" integrity="sha512-NmLkDIU1C/C88wi324HBc+S2kLhi08PN5GDeUVVVC/BVt/9Izdsc9SVeVfA1UZbY3sHUlDSyRXhCzHfr6hmPPw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap" rel="stylesheet">
    <link rel='stylesheet prefetch' href='https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")


    <style>
        .navbar_item.navbar_item__account:hover {
            cursor: pointer;
        }
        .navbar_item__account:hover .navbar-account__user {
            display: block;
        }
        .navbar-account__user {
            position: absolute;
            background-color: #fff;
            min-width: 20rem;
            padding: 1rem;
            top: 100%;
            right: 0;
            box-shadow: 2px 2px 8px 2px #999;
            display: none;
            border-radius: 0.5rem;
           
        }
        .navbar-account__user .navbar_link{
                display: block;
                padding: 0.6rem 0.5rem;
                color: #000;
                

        }
            .navbar-account__user .navbar_link:hover {
                color: blue;
                background-color: #ccc;
            }
            .navbar-account__user:before {
                display: block;
                background-color: transparent;
                width: 100%;
                height: 2rem;
                position: absolute;
                content: "";
                top: -23%;
                right: -1%;
            }
    </style>


</head>
<body>
    <div class="main">
        <div class="header">
            <div class="header-top-banner" style="background-color: #CCFFFF">
                <div class="top-banner-block">
                </div>
                <div class="navbar_logo">
                    <a href="/Saches/index" class="navbar_logo-link">
                        <img class="navbar_logo__icon" src="~/Content/img/logo.png" />
                    </a>
                </div>

                <nav class="navbar">
                    <ul class="navbar_list">

                        <form method="post" class="form_search" action="/Saches/Search">
                            @Html.AntiForgeryToken()
                            <input type="text" placeholder="Search..." name="TenSach">
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </form>

                        <p class="navbar_item navbar_item-infor-js">
                            <a href="/view_thongtinKH/Invoidce" class="navbar_link">THÔNG BÁO</a>

                            @*appear information add class =  invoidce-infor-appear*@
                            @if ( Session["appear"] != null)
                            {
                                if (Session["appear"].ToString() == "have")
                                {

                                       <i class="fas fa-circle invoidce-infor-js invoidce-infor-appear"></i>
                                }
                                else
                                {
                                        <i class="fas fa-circle invoidce-infor-js"></i>
                                }

                            }
                            @if (Session["appear"] == null)
                            {
                                <i class="fas fa-circle invoidce-infor-js"></i>

                            }
                        </p>
                        <p class="navbar_item">
                            <a href="/Gios/ViewCart" class="navbar_link">GIỎ HÀNG</a>
                        </p>
                        <div class="navbar_item navbar_item__account">
                            @if (Session["UserName"] == null)
                            {
                                <a href="/KhachHangs/Login" class="navbar_link">ĐĂNG NHẬP</a>
                            }
                            @if (Session["UserName"] != null)
                            {

                                if (Session["ad"] != null)
                                {

                                    <a href="/KhachHangs/Admin" class="navbar_link">QUẢN TRỊ</a>
                                }
                                else
                                {
                                    <h5>TÀI KHOẢN</h5>
                                    <div class="navbar-account__user">
                                        <a href="/KhachHangs/Login" class="navbar_link">ĐĂNG XUẤT</a>
                                        <a href="/KhachHangs/EditInfor?id=@Session["ID"]" class="navbar_link">CHỈNH SỬA THÔNG TIN</a>
                                    </div>
                                }
                            }


                        </div>
                    </ul>
                </nav>

            </div>
        </div>

        @RenderBody()

        <div id="footer">
            <section class="">
                <!-- Footer -->
                <footer class="bg-secondary text-white text-center">
                    <!-- Grid container -->
                    <div class="container p-4">
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                                <a href="index.html" class="text-uppercase text-uppercase__link">
                                    <i class="fas fa-store"></i> MyBoook
                                </a>

                                <p class="font-14 m-t-8">
                                    Dịch vụ nhà sách trực tuyến uy tính, chất lượng và nhanh chóng
                                </p>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                                <h5 class="text-uppercase text-uppercase__link">Dịch vụ</h5>

                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a href="#!" class="text-white footer-text__infor">Danh mục sản phẩm</a>
                                    </li>

                                    <li>
                                        <a href="#!" class="text-white footer-text__infor">
                                            <i class="fas fa-map-marker-alt"></i> Online toàn quốc
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#!" class="text-white">
                                            <i class="fas fa-phone"></i> 19001234
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                                <h5 class="text-uppercase text-uppercase__link mb-0">Tài khoản của tôi</h5>

                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#!" class="text-white footer-text__infor">Đăng nhập/ Tạo tài khoản</a>
                                    </li>
                                    <li>
                                        <a href="#!" class="text-white footer-text__infor">Chi tiết đơn hàng</a>
                                    </li>
                                    <li>
                                        <a href="#!" class="text-white footer-text__infor">Chi tiết tài khoản</a>
                                    </li>
                                </ul>
                            </div>

                            <!--Grid row-->
                        </div>
                        <!-- Grid container -->
                        <!-- Copyright -->
                        <div class="text-center text-center__font p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                            © 2020 Copyright: Book store
                        </div>
                        <!-- Copyright -->
                </footer>
                <!-- Footer -->
            </section>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        var inforInvoidce2 = document.querySelector('.invoidce-infor-js');
        var inforBill = document.querySelector('.navbar_item-infor-js');

        var img = document.querySelector(".img-navbar-background");
       
        var i = 1;

        function change_pic() {
            i = i + 1;
            if (i == 5) {
                i = 1;
            }
          
            if (i == 1 || i == 2) {
                img.src = "https://images.unsplash.com/photo-1471107340929-a87cd0f5b5f3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=773&q=80";
            }
            else {
                img.src = "https://images.unsplash.com/photo-1556566952-11eff3d06ed4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=388&q=80";
            }
        }
        var pic_src = setInterval(change_pic, 2000);
            
    </script>
</body>
</html>
